# Required
UPSTREAM_URL=http://localhost:4000
VALIDATOR_API_URL=https://validator.infrapass.xyz
VALIDATOR_API_KEY=your-validator-api-key
PROVIDER_ID=0x6dc7...
REDIS_URL=redis://:password@localhost:6379

# Auth (optional — defaults to none)
AUTH_MODE=none
AUTH_SECRET=

# Behaviour
FAIL_OPEN=false
CACHE_TTL_MS=15000
REQUEST_TIMEOUT_MS=5000

# Headers (defaults shown — only override if needed)
ADDRESS_HEADER=X-Infrapass-Address
SERVICE_HEADER=X-Infrapass-Service-Id
COST_HEADER=X-Infrapass-Cost

# Webhooks (optional)
PROVIDER_WEBHOOK_URL=
PROVIDER_WEBHOOK_SECRET=

# Logging
LOG_FORMAT=json
RUST_LOG=infrapass_sidecar=info,infrapass=info,tower_http=warn